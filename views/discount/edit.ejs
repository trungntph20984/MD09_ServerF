 <!-- model sửa -->
 <div>

    <button type="button" class="btn btn-primary" data-bs-toggle="modal"
        data-bs-target="#staticBackdropppp<%= row._id %>">
        <i class="fa-regular fa-pen-to-square"></i> Chưa sửa được 
    </button>

    <div class="modal fade" id="staticBackdropppp<%= row._id %>"
        data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
        aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <form action="/discount/edit/<%= row._id %>" method="post"
                enctype="multipart/form-data">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title"
                            id="staticBackdropLabel">
                            Sửa discount
                        </h5>

                    </div>
                    <div class="modal-body">
                        <form method="POST" action="/discount/edit">
                            <div class="form-group mb-3">
                                <label for="start_day">Hiệu lực
                                    từ</label>
                                <div class="input-group date">
                                    <input name="start_day"
                                    value="<%= row.start_day %>"
                                    type="datetime-local"
                                    class="form-control"
                                    id="start_day">
                                </div>
                            </div>



                            <div class="form-group mb-3">
                                <label for="end_day">Hiệu lực đến
                                </label>
                                <div class="input-group date">
                                    <input name="end_day"
                                        type="datetime-local"
                                        value="<%= row.start_day %>"
                                        class="form-control"
                                        id="end_day">
                                </div>
                            </div>
                            <div class="input-group">
                                <input name="voucherCode" type="text"
                                    class="form-control"
                                    id="voucherCode"
                                    placeholder="Mã voucher">
                                <div class="input-group-append">
                                    <span onclick="generateCode()"
                                        style="height: 40px;"
                                        class="input-group-text">
                                        <i class="fas fa-shuffle"></i>
                                    </span>
                                </div>
                            </div>

                            <div class="custom-dropdown mb-3 mt-3"
                                id="emptyContent">
                                <!-- Thẻ div này sẽ trống khi chọn "Tất cả" -->
                            </div>
                            <div class="custom-dropdown mb-3 mt-3"
                                id="selectOptions"
                                style="display:none;">
                                <label for="selectOptions">Chọn
                                    người dùng được sử dụng
                                    voucher</label>
                                <select name="user" multiple
                                    class="form-control">
                                    <% for (const user of listUser) { %>
                                        <option value="<%= user._id %>">
                                            <%= user.username %>
                                        </option>
                                        <% } %>
                                </select>
                            </div>
                            <div class=" mt-3 mb-3">
                                <input name="description" type="text"
                                    class="form-control"
                                    id="description"
                                    placeholder="Mô tả">
                            </div>
                            <div class="input-group mb-3">
                                <input name="price" type="number"
                                    class="form-control" id="price"
                                    placeholder="Nhập giá...">
                            </div>

                            <div class="mt-3">
                                <input name="usageCount" type="number"
                                    class="form-control" id="usageCount"
                                    placeholder="Nhập số lần được sử dụng">
                            </div>

                            <div class="modal-footer">
                                <button type="button"
                                    class="btn btn-secondary"
                                    data-bs-dismiss="modal">Hủy</button>
                                <button type="submit"
                                    class="btn btn-primary">Lưu thay
                                    đổi</button>
                            </div>
                        </form>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>