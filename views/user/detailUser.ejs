<div class="p-3 p-sm-5">
    <h2 class="text-center mb-5">
        Username : <%= objUser.username %>
    </h2>

    <div class="row" >
        <div class="card">
            <div class="row">
                <div class="col-md-6 col-sm-12 text-center">
                    <img class="img-detail" src="<%= objUser.avata %>" alt="" width="500px" height="500px">
                </div>
                <div class="col-md-6 col-sm-12">
                    <h4 class="pt-5">_id : <%= objUser._id %></h4><hr>
                    <p class=""><b>Fullname :</b> <%= objUser.full_name %></p>
                    <p class=""><b>Email :</b> <%= objUser.email %></p>
                    <p class=""><b>Phone number :</b> <%= objUser.phone_number %>.</p>
                    <p class=""><b>Address :</b> <%= objUser.address %></p><hr>
                </div>
            </div>
        </div>
    </div>
</div>

